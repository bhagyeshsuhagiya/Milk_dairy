<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cc">

<LinearLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/dairy" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Select Milk Quantity"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/minus"
            android:backgroundTint="#EADFD0"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16sp"
            android:text="-"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/liter"
            android:layout_width="wrap_content"
            android:textColor="@color/black"

            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textSize="30sp"
            android:text="1
"
            android:layout_margin="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/plus"
            android:backgroundTint="#EADFD0"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16sp"
            android:text="+"
            android:textSize="25sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Price"
        android:textColor="@color/black"

        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/rupee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"

        android:text="70"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <CheckBox
        android:id="@+id/homeDelivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="home delivery(5 rupee per km)"
        android:textSize="25sp"
        tools:ignore="HardcodedText"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Name"
        android:layout_margin="8dp"
        android:inputType="text"
        android:filterTouchesWhenObscured="true"
        tools:ignore="Autofill,HardcodedText"/>

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Address"
        android:layout_margin="8dp"
        android:filterTouchesWhenObscured="true"

        android:inputType="text"
        tools:ignore="Autofill,HardcodedText"/>

    <Button
        android:id="@+id/order"
        android:backgroundTint="#EADFD0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        android:text="order"
        android:textSize="25sp"
        android:layout_gravity="center"
        tools:ignore="HardcodedText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"

        android:text="ORDER SUMMARY"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_margin="16sp"
        tools:ignore="HardcodedText" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Milk Quantity  :"
        android:textColor="@color/black"

        android:textSize="25dp"
        android:layout_marginTop="4sp"
        android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:textColor="@color/black"

            android:layout_height="wrap_content"
            android:text="0 "
            android:textSize="25dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Milk Price  :"
            android:textSize="25dp"
            android:layout_marginTop="4sp"
            android:textColor="@color/black"

            android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"

            android:text="0 "
            android:textSize="25dp"
         />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"

            android:text="Home Delivery  :"
            android:textSize="25dp"
            android:layout_marginTop="4sp"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@+id/showhd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"

            android:text="Null "
            android:textSize="25dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Name  :"
        android:textSize="25dp"
        android:textColor="@color/black"

        android:layout_marginTop="4sp"
        android:layout_marginLeft="16dp"/>
    <TextView
        android:id="@+id/showname"
        android:layout_width="wrap_content"
        android:textColor="@color/black"

        android:layout_height="wrap_content"
        android:text="Your Name "
        android:textSize="25dp"
        />

</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Address  :"
            android:textColor="@color/black"

            android:textSize="25dp"
            android:layout_marginTop="4sp"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@+id/showaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"

            android:text="Your Address "
            android:textSize="25dp"
            />

    </LinearLayout>

</LinearLayout>

</ScrollView>